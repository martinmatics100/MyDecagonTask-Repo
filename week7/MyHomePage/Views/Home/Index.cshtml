@{
    ViewData["Title"] = "Home Page";
    var mostpicks = ViewData["mostpicks"] as List<Property>;
    var first_mostpick = ViewData["first_mostpick"] as Property;
    var beautybackyard = ViewData["beautybackyard"] as List<Property>;
    var livingroom = ViewData["livingroom"] as List<Property>;
    var apartment = ViewData["apartment"] as List<Property>;
}

@*added animate-section to the classes to implement pop up when scrolling*@
@*First section*@
<section class="flex-section animate-section">
    
    <div class="text-container">
        <h1>Forget Busy Work,<br /> Start Next Vacation</h1>
        <p>We provide what you need to enjoy your<br />holiday with family. Time to make another<br />memorable moments.</p>
        <button type="button" class="btn btn-primary">Show Me Now</button>
        <div class="logos">
            <div class="logos1">
                <img src="~/images/bottle.png" alt="bottle" />
                <p><span>80,409</span> travelers</p>
            </div>
            <div class="logos1">
                <img src="~/images/camera.png" alt="camera" />
                <p><span>862</span> treasure</p>
            </div>
            <div class="logos1">
                <img src="~/images/location.png" alt="location" />
                <p><span>1,492</span> cities</p>
            </div>
        </div>

    </div>

    <div class="image-container">
        
    <img src="~/images/banner.png" alt="section1" />
    </div>
</section>


<!--Most Picked-->
@*Second section*@
<section class="section1 animate-section">
    <h6>Most Picked</h6>
    <div class="man">
        <a href="#">
        <img src="~/images/@first_mostpick.Name" alt="image1"/>
            <span style="position:absolute; top:10px; right:10px; background-color:deeppink; padding:5px 10px; border-radius:10px; color:white; font-weight:bold;">$50 per night</span>
            <span class="transparent-bg bg-transparent" style="position:absolute; bottom:10px; left:10px; padding:5px 10px; border-radius:10px; color:white; font-weight:600; font-size: 20px;">Blue Origin Fams<br />Jakarta, Indonesia</span>
        </a>
    </div>
    <div class="man1">
        @if (mostpicks != null && mostpicks.Count > 0)
        {
            @foreach (var property in mostpicks)
            {
                @if (property == first_mostpick)
                {
                    continue;
                }
                else
                {
                    <div style="position:relative;">
                        <a href="#">
                            <img src="~/images/@property.Name" alt="image2" />
                            <span style="position:absolute; top:10px; right:10px; background-color:deeppink; padding:5px 10px; border-radius:10px; color:white; font-weight:bold;">@property.Price per night</span>
                            <span class="transparent-bg bg-transparent" style="position:absolute; bottom:10px; left:10px; padding:5px 10px; border-radius:10px; color:white; font-weight:600; font-size: 20px;">@property.City<br />@property.Location, Indonesia</span>
                        </a>
                    </div>
                }
            }
        }
    </div>
</section>


<!--Houses with beautiful backyards-->
<section class="section2 animate-section">

    <h5>Houses with beauty backyard</h5>  

    <div class="pic">

        <div class="image-container5" style="position:relative;">
            <a href="#">
            <img src="~/images/@beautybackyard[0].Name" alt="image6" />
                <span style="position:absolute; top:10px; right:10px; background-color:deeppink; padding:5px 10px; border-radius:10px; color:white; font-weight:bold;">@beautybackyard[0].Popularity</span>
            </a>
            <h6>@beautybackyard[0].City</h6>
            <p>@beautybackyard[0].Location, Indonesia</p>
        </div>
        @foreach(var item in beautybackyard)
        {
            if(item == beautybackyard[0])
            {
                continue;
            }
            else
            {
                <div class="image-container5">
                    <a href="#">
                        <img src="~/images/@item.Name" alt="image7" />
                    </a>
                    <h6>@item.City</h6>
                    <p>@item.Location, Indonesia</p>
                </div>

            }
        }
</section>


<!--Hotels with large living room-->
